<div class="container">
  <br>
  <blockquote class="blockquote">
    <%@articles.each do |article|%>
      <p>
      <p class="mb-0"><%=article.text%></p>
      <footer class="blockquote-footer"><cite title="Source Title"><%=article.title%></cite></footer>
      </p>

      <p class="font-weight-light">
        <%= link_to 'Comments', article_path(article)%> |
        <%= link_to 'Edit', edit_article_path(article)%>
      </p>
      <hr>
    <% end %>
  </blockquote>

  <br>
  <a href="/articles/new" class="btn btn-primary">Create Article</a>

</div>