<div class="container">
  <%#= form_for :article, url: article_path(@article), method: :patch  do |f| %>
  <%= form_for :comment, url: article_comment_path([@article, @comment]), method: :patch do |f| %>

    <p class="lead">
      <%= f.label :body, 'Edit your comment:' %> <br>
      <%= f.text_area :body, :rows => '5', :cols => '50' %>
    </p>
    <p class="lead">
      <%= f.submit 'Yarr!', :class => 'btn btn-primary'  %>
    </p>

  <% end %>
</div>